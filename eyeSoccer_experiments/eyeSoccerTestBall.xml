<experiment id="eyeSoccerTest"
            dummyMode="1"
            fullScreen="0"
            screenCoord="[20, 20, 850, 480]">
    
    <target id="soccerBall"
            type="dot"
            radius="20"
            color="[255 255 255]"/>
            
    <movement id="ballMovement"
              type="linear"
              direction="25"
              speed="300"/>
            
    <target id="goal"
            type="rect"
            height="125"
            width="25"
            color="[255 255 255]"/>
            
    <movement id="goalMovement"
              type="linear"
              direction="205"
              speed="300"/>
          
    <background id="context"
                type="noiseTexture"
                noiseColor="[0.5 0.5 0.5]"
                density="180"
                noiseRate="0.1"/>

    <propertyChange id="invisible"
                    propertyName="visibility"
                    newValue="0"
                    time="1.5"/>
                    
<!--     <propertyChange id="visible"
                    propertyName="visibility"
                    newValue="1"
                    time="1.3"/> -->
    
    <trial id="eyeSoccer_1"
           trialTargets="[soccerBall goal]"
           soccerBall.x="150"
           soccerBall.y="350"
           soccerBall.movement="ballMovement"
           soccerBall.propertyChanges="[invisible]"
           goal.x="700"
           goal.y="20"
           goal.propertyChanges="[invisible]"
           background="context"
           context.propertyChanges="[invisible]"
           duration="2.5"/>


    <trial id="eyeSoccer_2"
           trialTargets="[soccerBall goal]"
           soccerBall.x="150"
           soccerBall.y="350"
           soccerBall.propertyChanges="[invisible]"
           goal.x="700"
           goal.y="20"
           goal.movement="goalMovement"
           goal.propertyChanges="[invisible]"
           background="context"
           context.movement="goalMovement"
           context.propertyChanges="[invisible]"
           duration="2.5"/>
           
   <trialOrder order = "[eyeSoccer_1 eyeSoccer_2]"
               shuffle = "0"/>
    
</experiment>