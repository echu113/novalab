<experiment id="eyeSoccerTest"
            dummyMode="1"
            fullScreen="0"
            screenCoord="[20, 20, 850, 480]">
    
    <target id="soccerBall"
            type="dot"
            radius="20"
            color="[255 255 255]"/>
            
    <movement id="ballMovement"
              type="linear"
              direction="25"
              speed="300"/>
            
    <target id="goal"
            type="rect"
            height="125"
            width="25"
            color="[255 255 255]"/>
            
    <movement id="goalMovement"
              type="linear"
              direction="205"
              speed="300"/>
          
    <background id="context"
                type="noiseTexture"
                noiseColor="[0.5 0.5 0.5]"
                density="180"
                noiseRate="0.1"/>

    <propertyChange id="invisible"
                    propertyName="visibility"
                    newValue="0"
                    time="0.5"/>
       














    <background id="fixationBackground"
                type="noiseTexture"
                noiseColor="[0 0 0]"
                density="100"
                noiseRate="1"/>

    <target id="fixationBall"
            type="dot"
            radius="20"
            color="[1 1 1]"/>

    <propertyChange id="fixationEnd"
                    propertyName="visibility"
                    newValue="0"
                    time="0.5"/>
    
    <trial id="fixationTrial"
           trialTargets="[fixationBall]"
           fixationBall.x="150"
           fixationBall.y="350"
           fixationBall.propertyChanges="[fixationEnd]"
           background="fixationBackground"
           duration="0.6"/>









    
    <trial id="eyeSoccer_1"
           trialTargets="[soccerBall goal]"
           soccerBall.x="150"
           soccerBall.y="350"
           soccerBall.movement="ballMovement"
           soccerBall.propertyChanges="[invisible]"
           goal.x="700"
           goal.y="20"
           goal.propertyChanges="[invisible]"
           background="context"
           context.propertyChanges="[invisible]"
           duration="0.6"/>


    <trial id="eyeSoccer_2"
           trialTargets="[soccerBall goal]"
           soccerBall.x="150"
           soccerBall.y="350"
           soccerBall.propertyChanges="[invisible]"
           goal.x="700"
           goal.y="20"
           goal.movement="goalMovement"
           goal.propertyChanges="[invisible]"
           background="context"
           context.movement="goalMovement"
           context.propertyChanges="[invisible]"
           duration="0.6"/>








